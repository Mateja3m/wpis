{
  "name": "@wpis/verifier",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run --passWithNoTests",
    "dev": "node --env-file-if-exists=../../.env --import tsx src/index.ts",
    "dev:watch": "node --env-file-if-exists=../../.env --import tsx --watch src/index.ts",
    "prebuild": "npm --workspace @idoa/wpis-core run build && npm --workspace @idoa/wpis-adapter-arbitrum run build",
    "pretest": "npm --workspace @idoa/wpis-core run build && npm --workspace @idoa/wpis-adapter-arbitrum run build"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "@idoa/wpis-core": "0.1.0",
    "@idoa/wpis-adapter-arbitrum": "0.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "tsx": "^4.19.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  }
}
